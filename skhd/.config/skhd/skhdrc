# Change window focus within space
cmd - h : yabai -m window --focus west
cmd - l : yabai -m window --focus east
cmd - j : yabai -m window --focus next || yabai -m window --focus first
cmd - k : yabai -m window --focus prev || yabai -m window --focus last

# Change focus between external displays (left and right)
alt - j : yabai -m display --focus west
alt - k : yabai -m display --focus east

# Rotate layout clockwise
shift + cmd - r : yabai -m space --rotate 270

# Flip along axes
shift + cmd - y : yabai -m space --mirror y-axis
shift + cmd - x : yabai -m space --mirror x-axis

# Toggle window float
shift + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# Move window to previous and next space
shift + cmd - p : yabai -m window --space prev
shift + cmd - n : yabai -m window --space next

# Move window to specific space
shift + cmd - 1 : yabai -m window --space 1
shift + cmd - 2 : yabai -m window --space 2
shift + cmd - 3 : yabai -m window --space 3
shift + cmd - 4 : yabai -m window --space 4
shift + cmd - 5 : yabai -m window --space 5
shift + cmd - 6 : yabai -m window --space 6
shift + cmd - 7 : yabai -m window --space 7

# Focus specific space
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7

# Focus recent, previous, and next space
shift + cmd - j : yabai -m space --focus recent
shift + cmd - h : yabai -m space --focus prev
shift + cmd - l : yabai -m space --focus next

# Toggle window zoom
cmd - f : yabai -m window --toggle zoom-parent
cmd - d : yabai -m window --toggle zoom-fullscreen

# Toggle sticky (show on all spaces)
cmd + shift - s : yabai -m window --toggle sticky

# Open Alacritty
cmd - escape : /Applications/Alacritty.app/Contents/MacOS/alacritty

# Close window
cmd - w : yabai -m window --close

